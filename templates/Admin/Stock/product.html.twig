{% extends 'base.html.twig' %}

{% block title %}Index Produits{% endblock %}


{% block notification %}
  {% for message in app.flashes('success') %}
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <h4 class="alert-heading">Succ√®s!</h4>
      {{ message|raw }}
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
  {% endfor %}
{% endblock %}


{% block body %}
    <section class="project-area">
      <div class="container">
        <a href="{{ path('add.product') }}" class="genric-btn primary circle">Ajouter un nouveau produit</a>
        <div class="progress-table-wrap">
							<div class="progress-table">
								<div class="table-head">
									<div class="serial">#</div>
									<div class="country">Nom du produit</div>
									<div class="country">Description</div>
                  <div class="visit">Action</div>
								</div>
                {% set num = 0 %}
                {% for product in products %}
                  {% set num = num + 1 %}
                  <div class="table-row">
                    <div class="serial">{{ num }}</div>
                    <div class="country">{{ product.name }} {{ product.type }}</div>
                    <div class="country">{{ product.description }}</div>
                    <div class="visit"><a href="{{ path('edit.product', {'id': product.id}) }}" class="genric-btn default-border circle">Editer</a></div>
                  </div>
                {% endfor %}
							</div>
						</div>
      </div>
    </section>
    <section class="project-area">
      <div class="container">
        <div class="row">
