<section class="contact-area container">
    {{ form_start(form) }}
    <div class="row">
      {% if form.category is defined %}
        <div class="col-lg-6">
          <div class="input-group-icon mt-10">
            <div class="icon"><i class="fa fa-plane" aria-hidden="true"></i></div>
            <div class="form-select">
              {{ form_row(form.category) }}
            </div>
          </div>
        </div>
      {% endif %}
      <div class="col-lg-6">
        {{ form_row(form.type, { 'attr': {'class' : "common-input mt-10", 'placeholder': 'Type du produit'} }) }}
      </div>
      <div class="col-lg-12">
        {{ form_row(form.description, { 'attr': {'class' : "common-input mt-10", 'placeholder' : 'Description du produit'} }) }}
      </div>
    </div><br>
    {{ form_rest(form) }}
      <button class="genric-btn primary circle">{{ button|default('Enregistrer') }}</button><br><br>
    {{ form_end(form) }}
</section>
