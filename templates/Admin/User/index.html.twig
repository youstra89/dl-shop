{% extends 'base.html.twig'%}


{% block stylesheets %}
{% endblock %}


{% block title 'Administration des utilisateurs' %}


{% block body %}
  <a href="{{ path('profile') }}" class="genric-btn success circle arrow small">Mon compte</a>
  <a href="{{ path('registration') }}" class="genric-btn success circle arrow small">Ajouter un utilisateur</a>
  <h2>Liste des membres</h2>
  <table class="table table-s">
    <thead>
      <tr>
        <th>N°</th>
        <th>Nom</th>
        <th>Login</th>
        <th>Email</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      {% set i = 0 %}
      {% for user in users %}
        {% set i = i + 1 %}
        <tr>
          <td>{{ i }}</td>
          <td>{{ user.nom }} {{ user.pnom }}</td>
          <td>{{ user.username }}</td>
          <td><a class="white-text" href="mailto:{{ user.email }}" uk-tooltip="title: Envoyer un mail à l'utilisateur; pos: top">{{ user.email }}</a></td>
          <td>
            <a href="{{ path('user.info', {id: user.id}) }}" class="genric-btn success circle arrow small">info</a>
          </td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
  {#<div class="uk-pagination uk-flex-center">
    {{ knp_pagination_render(users) }}
  </div>#}
{% endblock %}



{% block javascripts %}
{% endblock %}
