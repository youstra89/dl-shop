{% extends 'base.html.twig' %}

{% block title %}Les ventes du jour{% endblock %}


{% block notification %}
{% endblock %}


{% block body %}
<div class="banner-area">
  <div class="container">
    <div class="row justify-content-center generic-height align-items-center mb-3">
      <div class="col-lg-10">
        <a href="javascript:history.back()" class="genric-btn success circle arrow small">
          <span class="lnr lnr-arrow-left"></span>&nbsp;Retour
        </a><br><br>
        <h3>Les ventes du {{ ventes[0].date|date('d-m-Y') }}</h3>
        <div class="row">
          <table class="table table-sm">
            <thead>
              <tr>
                <th>#</th>
                <th>Date</th>
                <th>Total des ventes</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              {% set i = 0 %}
              {% for vente in ventes %}
                {% set i = i + 1 %}
                <tr>
                  <td>{{ i }}</td>
                  <td>{{ vente.date|date('d-m-Y') }}</td>
                  <td>{{ vente.prixTotal|number_format(0, ',', ' ') }} F CFA</td>
                  <td>
                    <a href="{{ path('details.vente', {id: vente.id}) }}" class=" circle arrow small">Plus de d√©tails</a>
                  </td>
                </tr>
              {% endfor %}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}
